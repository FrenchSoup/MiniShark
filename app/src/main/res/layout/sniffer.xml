<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".sniffer.SnifferActivity">

           <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="Save in file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saveinfile"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/pcapfile"
                android:layout_weight="1"
                android:text="captured.pcap" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="Run until..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rununtil" />

            <EditText
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="10"
                android:ems="10"
                android:id="@+id/rununtiltime"
                android:layout_weight="0.13" />

            <TextView
                android:text="seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Manual flags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/manualflags"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:text="Start capture!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="snifferStart"/>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sharkListView"
        android:choiceMode="singleChoice" />

</LinearLayout>