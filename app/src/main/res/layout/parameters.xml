<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/minishark_splash"
        android:layout_width="match_parent"
        android:layout_height="339dp"
        android:id="@+id/imageView4"
        android:cropToPadding="false"
        android:scaleY="1"
        android:scaleX="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:text="Save in file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveinfile"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/pcapfile"
            android:layout_weight="1"
            android:text="captured.pcap" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <CheckBox
            android:text="Run until..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rununtil"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="0"
            android:ems="10"
            android:id="@+id/rununtiltime"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Manual flags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance"
            android:textAlignment="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/manualflags"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:text="Start capture!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_weight="1"
        android:onClick="snifferStart"/>

</LinearLayout>